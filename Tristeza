import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedir al usuario que ingrese cómo se siente
        System.out.println("¿Cómo te sientes?");
        String emocion = scanner.nextLine();

        // Reflexión y mensaje motivacional
        System.out.println("Entiendo que te sientas " + emocion + ".");
        System.out.println("¿Qué te haría sentir mejor?"); 
        // Espacio para que el usuario escriba lo que lo haría sentir mejor
        System.out.println(); 

        // Leer la respuesta del usuario
        String respuestaUsuario = scanner.nextLine();
        System.out.println();

        // Mostrar mensaje motivacional
        System.out.println("Recuerda que en los momentos difíciles es importante mantener una actitud positiva.");
        System.out.println("¡Tú puedes superar cualquier desafío!");

        scanner.close();
    }
}
